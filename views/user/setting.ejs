     <% } %>
      <form action="/uploadPhoto" method="post" enctype="multipart/form-data">
        <input  type="file" id="myFile" name="mypic">
        <input type="text" id="firstName" name="username" value="<%=user.username %>" hidden/>
        <div style="display: flex;">
          <button class="saveBtn" style="margin-left:10px ; margin-bottom: 20px; width: 130px;height: 30px; border-radius: 5px; position:relative" type="submit">Upload</button>
          &nbsp;
          <a class="removeBtn" href="/removeProfilePic?_method=DELETE" style="font-size: small; text-decoration: none;"> Remove</a>
