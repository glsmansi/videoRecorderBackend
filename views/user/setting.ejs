    <div class="nameAndPhoto">
      <h2>Name and photos</h2>
      <% if(user.profilePicture){ %>
        <div class="circleBox" style="overflow: hidden; padding: 0; position: relative; z-index: 2;">
        <img src="<%=user.profilePicture%>" style=" height: 130px; width: 150px; z-index: 1; border-radius: 5px;" alt="hello">
